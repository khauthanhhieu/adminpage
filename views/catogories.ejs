<!DOCTYPE html>
<html lang="en">

<head>

    <title>Dashboard</title>
    <% include partials/headadmin.ejs %>

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <% include partials/headeradmin.ejs %>
        </header>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <% include partials/menusidebar.ejs %>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <% include partials/headdesktop.ejs %>
            </header>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">

                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-6">
                                <h6 class="title-1 m-b-25">Quản lý loại sản phẩm</h6>
                            </div>
                            <div class="col-lg-2">
                                <div class="js-item-menu">
                                    <button class="au-btn btn-primary active">
                                        <i class="zmdi zmdi-plus"></i>Thêm
                                    </button>
                                    <div class="mess-dropdown js-dropdown">
                                        <!-- THÊM TÀI KHOẢN -->
                                        <div class="card">
                                            <div class="card-header">Thêm loại sản phẩm</div>
                                            <div class="card-body">
                                                <form action="/categories/create" method="post" novalidate="novalidate">
                                                    <div class="form-group">
                                                        <label for="cc-payment" class="control-label mb-1">Tên loại sản
                                                            phẩm</label>
                                                        <input id="name" name="name" type="text"
                                                            class="form-control cc-exp" value="" data-val="true"
                                                            data-val-required="Please enter the card expiration"
                                                            data-val-cc-exp="Please enter a valid month and year"
                                                            placeholder="Nhập tên loại sản phẩm..."
                                                            autocomplete="cc-exp">
                                                    </div>
                                                    <div>
                                                        <button id="payment-button" type="submit"
                                                            class="btn btn-lg btn-info btn-block">
                                                            <i class="fas fa-paper-plane"></i>&nbsp;
                                                            <span id="payment-button-amount">Tạo</span>
                                                            <span id="payment-button-sending"
                                                                style="display:none;">Sending…</span>
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <!-- KẾT THÚC THÊM TÀI KHOẢN -->
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <!-- TABLE -->
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tên loại sản phẩm</th>
                                                <th>Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% cList.forEach(function(cItem) { %>
                                            <tr>
                                                <td><%= cItem.id %></td>
                                                <td><%= cItem.name %></td>
                                                <td>
                                                    <a href="categories/edit/<%= cItem.id %>" class="au-btn btn-success">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="./delete/<%= cItem.id %>" class="au-btn btn-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- END TABLE -->
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <% include partials/jqueryScript.ejs %>
</body>

</html>
<!-- end document-->