<!DOCTYPE html>
<html lang="en">

<head>

    <title>Dashboard</title>
    <% include partials/headadmin.ejs %>

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <% include partials/headeradmin.ejs %>
        </header>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <% include partials/menusidebar.ejs %>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <% include partials/headdesktop.ejs %>
            </header>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">

                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-6">
                                <h6 class="title-1 m-b-25">quản lý tài khoản khách hàng</h6>
                            </div>
                            <div class="col-lg-2">
                                <a href="/users/create">
                                    <button class="au-btn btn-primary active">
                                        <i class="zmdi zmdi-plus"></i> Thêm
                                    </button>
                                </a>
                            </div>

                            <div class="col-lg-12">

                                <!-- TABLE -->
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Họ và tên</th>
                                                <th>Email</th>
                                                <th>Username</th>
                                                <th>Thao tác</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% uList.forEach(function(uItem) { %>
                                            <tr>
                                                <td><%= uItem.id %></td>
                                                <td><%= uItem.fullname %></td>
                                                <td>
                                                    <span class="block-email"><%= uItem.email %></span>
                                                </td>
                                                <td><%= uItem.username %></td>
                                                <td>
                                                    <a href="/users/edit/<%= uItem.id %>"
                                                        class="au-btn btn-success">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="/users/delete/<%= uItem.id %>" class="au-btn btn-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- END TABLE -->
                            </div>
                        </div>
                        <div class="row">
                                <ul class="pagination">
                                    <% if(iPage > 1) { %>
                                        <li class="page-item"> 
                                            <a class="page-link" href="/products?p=<%= iPage - 1 %>">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a> 
                                        </li>
                                    <% } %>
                                    <% var begin = 1; %>
                                    <% if (begin < iPage - 1) begin = iPage - 1; %>
                                    <% var end = nPage %>
                                    <% if (end > begin + 5) end = begin + 5; %>
                                    <% for(var i = begin; i <= end; i++) { %>
                                        <% if(iPage == i) { %>
                                            <li class="page-item active"><a class="page-link" href="#"><%= i %></a></li>
                                        <% } else { %>
                                            <li class="page-item"><a class="page-link" href="/users?p=<%= i %>"><%= i %></a></li>
                                        <% } %>
                                    <% } %>
                                    <% if (iPage < parseInt(nPage)) { %>
                                        <% console.log(iPage + "<" + nPage) %>
                                        <li class="page-item">
                                            <a class="page-link" href="/users?p=<%= parseInt(iPage) + 1 %>">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    <% } %>
                                </ul>
                            </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <% include partials/jqueryScript.ejs %>
</body>

</html>
<!-- end document-->