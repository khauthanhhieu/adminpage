<!DOCTYPE html>
<html lang="en">

<head>

    <title>Dashboard</title>
    <% include partials/headadmin.ejs %>

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <% include partials/headeradmin.ejs %>
        </header>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <% include partials/menusidebar.ejs %>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <% include partials/headdesktop.ejs %>
            </header>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">

                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-6">
                                <h6 class="title-1 m-b-25">quản lý tài khoản khách hàng</h6>
                            </div>
                            <div class="col-lg-2">
                                <div class="js-item-menu">
                                    <a href="/users/create" class="au-btn btn-success">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="col-lg-12">

                                <!-- TABLE -->
                                <div class="table-responsive table--no-card m-b-40">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Họ và tên</th>
                                                <th>Email</th>
                                                <th>Username</th>
                                                <th>Thao tác</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% uList.forEach(function(uItem) { %>
                                            <tr>
                                                <td><%= uItem.id %></td>
                                                <td><%= uItem.fullname %></td>
                                                <td><%= uItem.email %></td>
                                                <td><%= uItem.username %></td>
                                                <td>
                                                    <a href="/users/edit/<%= uItem.id %>"
                                                        class="au-btn btn-success">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="/users/delete/<%= uItem.id %>" class="au-btn btn-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                        </tbody>
                                </div>
                                <!-- END TABLE -->
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <% include partials/jqueryScript.ejs %>
</body>

</html>
<!-- end document-->